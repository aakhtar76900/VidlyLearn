@model Vidly.ViewModel.MovieFormViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Movie == null)
{
    <h2>Add Movie</h2>
}
else
{
    <h2>Edit Movie</h2>
}

@using (Html.BeginForm("Save", "Movies"))
{

    <div class="form-group">
        <label for="Name">Name</label>
        @Html.TextBoxFor(x => x.Movie.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="ReleaseDate">Release Date</label>
        @Html.TextBoxFor(x => x.Movie.ReleaseDate, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="GenereId">Genere</label>
        @Html.DropDownListFor(x => x.Movie.GenereId, new SelectList(Model.Generes, "Id", "Name"), "Select", new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="NumberInStock">Number In Stock</label>
        @Html.TextBoxFor(x => x.Movie.NumberInStock, new { @class = "form-control" })
    </div>

    @Html.HiddenFor(x=>x.Movie.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}


